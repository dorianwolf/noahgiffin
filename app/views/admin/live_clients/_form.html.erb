<%= form_for([:admin, @live_client], multipart: true) do |f| %>
  <% if @live_client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@live_client.errors.count, "error") %> prohibited this live_client from being saved:</h2>

      <ul>
      <% @live_client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field artist">
    <%= f.text_field :artist, placeholder: 'artist' %>
  </div>
  <div class="upload">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="field image">
    <%= f.text_field :remote_image_url, placeholder: 'or paste an image link' %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
